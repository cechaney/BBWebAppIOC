<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
        id="WebApp_ID"
        version="2.5">
  <display-name>Archetype Created Web Application</display-name>

  <!-- Old school stuff -->

  <servlet>
    <servlet-name>ExampleServlet</servlet-name>
    <servlet-class>com.homedepot.bb.examples.ExampleServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ExampleServlet</servlet-name>
    <url-pattern>/es</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>ExampleFilter</filter-name>
    <filter-class>com.homedepot.bb.examples.ExampleFilter</filter-class>
    <init-param>
      <param-name>DateCookieName</param-name>
      <param-value>CURRENT_TIME</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>ExampleFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <listener>
    <listener-class>com.homedepot.bb.examples.ExampleListener</listener-class>
  </listener>

  <!-- Stuff key to IOC and MVC frameworks -->

  <listener>
    <listener-class>com.homedepot.bb.ContextLoaderListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>DispatcherServlet</servlet-name>
    <servlet-class>com.homedepot.bb.DispatcherServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>DispatcherServlet</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

</web-app>
